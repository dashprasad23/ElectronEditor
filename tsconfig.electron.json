{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist-electron",
    "rootDir": "./electron"
  },
  "include": [
    "electron/**/*"
  ]
}