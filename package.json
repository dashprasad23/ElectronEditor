{
  "name": "electroneditor",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "author": {
    "name": "Debiprasad Dash",
    "email": "debiprasad.dash@icloud.com"
  },
  "description": "Modern, lightweight, and extensible code editor",
  "homepage": "./",
  "dependencies": {
    "@codemirror/lang-cpp": "^6.0.3",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-go": "^6.0.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-java": "^6.0.2",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-php": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-rust": "^6.0.2",
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/language": "^6.3.2",
    "@codemirror/legacy-modes": "^6.3.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fsegurai/codemirror-theme-github-dark": "^6.2.3",
    "@fsegurai/codemirror-theme-github-light": "^6.2.3",
    "@mui/icons-material": "^7.3.7",
    "@mui/lab": "^7.0.1-beta.21",
    "@mui/material": "^7.3.7",
    "@mui/x-tree-view": "^8.27.0",
    "@reduxjs/toolkit": "^1.9.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@uiw/react-codemirror": "^4.19.4",
    "antd": "^5.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.7.3",
    "i": "^0.3.7",
    "node-pty": "^1.1.0",
    "npm": "^9.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-resize-layout": "^0.2.3",
    "react-scripts": "5.0.1",
    "react-terminal": "^1.3.0",
    "redux": "^4.2.0",
    "redux-thunk": "^2.4.2",
    "web-vitals": "^2.1.4",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "scripts": {
    "compile:electron": "tsc -p tsconfig.electron.json",
    "start": "react-scripts start",
    "build": "npm run compile:electron && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm:electron\" \"npm run compile:electron -- -w\"",
    "electron": "wait-on tcp:3000 && electron .",
    "postinstall": "npx electron-rebuild -f -w node-pty",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-redux": "^7.1.34",
    "concurrently": "^7.6.0",
    "electron": "^40.1.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "sass": "^1.57.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "extends": null,
    "appId": "com.electroneditor.app",
    "productName": "Electron Editor",
    "files": [
      "build/**/*",
      "dist-electron/**/*",
      "public/AppIcons/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "publish": [
      "github"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/AppIcons/rounded_app_icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "background": "public/dmg-background.png",
      "icon": "public/AppIcons/rounded_app_icon.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "icon": "public/AppIcons/rounded_app_icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "public/AppIcons/rounded_app_icon.png",
      "category": "Development",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}